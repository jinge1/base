{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "src",
    "declaration": false,
    "removeComments": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "allowJs": true,
    "importHelpers": true
  },
  "lib": [
    "dom",
    "es2017"
  ],
  "include": [
    "./src/**/*"
  ]
}
